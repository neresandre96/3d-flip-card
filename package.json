{
  "name": "3d-flip-card",
  "version": "0.1.0",
  "description": "Beautiful rotational 3D card component for React",
  "author": "neresandre96",
  "license": "MIT",
  "repository": "neresandre96/card-3d",
  "main": "dist/index.js",
  "module": "dist/index.modern.js",
  "source": "src/index.tsx",
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "build": "microbundle-crl --no-compress --format modern,cjs && npm run copy-css && npm run docs",
    "release": "standard-version && npm run build && npm publish",
    "start": "microbundle-crl watch --no-compress --format modern,cjs",
    "docs": "typedoc --out docs/v0.1 src",
    "copy-css": "xcopy /s /y src\\*.css dist\\"
  },
  "peerDependencies": {
    "react": "^18.x"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.0.0",
    "@testing-library/react": "^14.0.0",
    "@testing-library/user-event": "^14.4.3",
    "@types/jest": "^29.0.3",
    "@types/node": "^20.6.1",
    "@types/react": "^18.0.28",
    "@types/react-dom": "^18.0.11",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "babel-eslint": "^10.1.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-config-standard-react": "^12.0.0",
    "eslint-plugin-import": "^2.28.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-react": "^7.33.1",
    "gh-pages": "^6.1.1",
    "microbundle-crl": "^0.13.10",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.0.1",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "react-scripts": "^5.0.1",
    "standard-version": "^9.5.0",
    "typedoc": "^0.26.7",
    "typescript": "^4.9.5"
  },
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "require": "./dist/index.js",
      "import": "./dist/index.modern.js"
    },
    "./card-styles.css": "./dist/card-styles.css"
  },
  "sideEffects": false
}
